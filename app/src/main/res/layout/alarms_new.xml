<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/alarmsLayout">


    <View android:layout_height="195dp"
        android:layout_width="140dp"
        android:id="@+id/hr"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/arrowup"
        android:background="@drawable/arrow_selector"
        android:scaleType="centerInside"
        android:id="@+id/aArrowUp"/>
    <TextView
        android:id="@+id/gradientTop"
        android:layout_width="1000dp"
        android:layout_height="50dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/fade_top">
    </TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="140dp"
        android:layout_height="195dp"
        android:id="@+id/alarmTimeSelection"
        android:layout_marginStart="9dp"
        android:layout_marginTop="150dp">
    </LinearLayout>

    <TextView
        android:id="@+id/gradientBottom"
        android:layout_width="1000dp"
        android:layout_height="50dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/fade_bottom">
    </TextView>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="360dp"
        android:src="@drawable/arrowdown"
        android:background="@drawable/arrow_selector"
        android:scaleType="centerInside"
        android:id="@+id/aArrowDown" />



    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="177dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/arrowup"
        android:background="@drawable/arrow_selector"
        android:scaleType="centerInside"
        android:id="@+id/aArrowUp2"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="140dp"
        android:layout_height="195dp"
        android:id="@+id/alarmTimeSelection2"
        android:layout_marginStart="138dp"
        android:layout_marginTop="150dp">
    </LinearLayout>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="177dp"
        android:layout_marginTop="360dp"
        android:src="@drawable/arrowdown"
        android:background="@drawable/arrow_selector"
        android:scaleType="centerInside"
        android:id="@+id/aArrowDown2" />




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="180dp"
        android:layout_height="195dp"
        android:id="@+id/alarmTimeSelection3"
        android:layout_marginStart="227dp"
        android:layout_marginTop="150dp">
    </LinearLayout>





    <!--
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="Alarm Time"
        android:layout_below="@+id/alarmTimeSelection"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:lines="1"/>
        -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Return to Home"
        android:id="@+id/returnFromAlarms"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circle"
        android:background="@drawable/circle"
        android:layout_marginStart="12dp"
        android:layout_marginTop="184dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circle2"
        android:background="@drawable/circle"
        android:layout_marginStart="139dp"
        android:layout_marginTop="184dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/aHT" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/changeShit"
        android:layout_alignTop="@+id/aHT"
        android:layout_centerHorizontal="true" />


</RelativeLayout>